package it.unipv.pois.Banca.mvc.view;

import java.awt.BorderLayout;

import javax.swing.JButton;
import javax.swing.JLabel;
import javax.swing.JPanel;

public class AddBankAccountPanel extends JPanel {
	private JLabel user_istructions;
	private JButton conto_web;
	private JButton conto_corrente;
	private JButton conto_deposito;
	
	
	
	public AddBankAccountPanel() {
		super();
		user_istructions = new JLabel("Seleziona il tipo di conto che vuoi aggiungere");
		conto_web = new JButton("Inserisci Conto web");
		conto_corrente =  new JButton("Inserisci conto corrente");
		conto_deposito = new JButton("Inserisci conto deposito");
		
		conto_web.setActionCommand("Conto Web");
		conto_corrente.setActionCommand("Conto Corernte");
		conto_deposito.setActionCommand("Conto Deposito");
		
		JPanel bank_account_buttons = new JPanel();
		bank_account_buttons.add(conto_corrente);
		bank_account_buttons.add(conto_web);
		bank_account_buttons.add(conto_deposito);
		
		setLayout(new BorderLayout());
		add(user_istructions,BorderLayout.NORTH);
		add(bank_account_buttons,BorderLayout.SOUTH);
		
	
		
	}


	public JLabel getUser_istructions() {
		return user_istructions;
	}


	public void setUser_istructions(JLabel user_istructions) {
		this.user_istructions = user_istructions;
	}


	public JButton getConto_web() {
		return conto_web;
	}


	public void setConto_web(JButton conto_web) {
		this.conto_web = conto_web;
	}


	public JButton getConto_corrente() {
		return conto_corrente;
	}


	public void setConto_corrente(JButton conto_corrente) {
		this.conto_corrente = conto_corrente;
	}


	public JButton getConto_deposito() {
		return conto_deposito;
	}


	public void setConto_deposito(JButton conto_deposito) {
		this.conto_deposito = conto_deposito;
	} 
	
	
	
	
	
	
	
	
	

}
